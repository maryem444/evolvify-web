{% extends 'base.html.twig' %}

{% block title %}Liste des demandes de congé{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
        }
        .status-en-attente { background-color: #ffd700; color: #000; }
        .status-approuve { background-color: #28a745; color: #fff; }
        .status-refuse { background-color: #dc3545; color: #fff; }
        
        .table th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
        }
        
        .action-buttons .btn {
            margin: 0 2px;
        }
        
        .employee-name {
            font-weight: 600;
            color: #495057;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid p-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="card">
            <div class="card-header">
                <h2 class="card-title mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>
                    Liste des demandes de congé
                </h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Employé</th>
                                <th>Type</th>
                                <th>Date de début</th>
                                <th>Date de fin</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for conge in conges %}
                            <tr>
                                <td class="employee-name">
                                    {{ conge.employe.prenom }} {{ conge.employe.nom }}
                                </td>
                                <td>{{ conge.type|replace({'_': ' '})|capitalize }}</td>
                                <td>{{ conge.dateDebut|date('d/m/Y') }}</td>
                                <td>{{ conge.dateFin|date('d/m/Y') }}</td>
                                <td>
                                    <span class="status-badge status-{{ conge.statut|lower }}">
                                        {{ conge.statut|replace({'_': ' '})|capitalize }}
                                    </span>
                                </td>
                                <td class="action-buttons">
                                    <a href="{{ path('app_conge_show', {'id': conge.id}) }}" class="btn btn-info btn-sm" title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    
                                    {% if conge.statut == 'EN_ATTENTE' %}
                                        <a href="{{ path('app_conge_edit', {'id': conge.id}) }}" class="btn btn-primary btn-sm" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        
                                        <form method="post" action="{{ path('app_conge_delete', {'id': conge.id}) }}" style="display: inline-block"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette demande de congé ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conge.id) }}">
                                            <button class="btn btn-danger btn-sm" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">Aucune demande de congé trouvée</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enable Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
{% endblock %}
