<script>
// Global variable to track if reCAPTCHA has been verified
var recaptchaVerified = false;
var recaptchaWidgetId;

// Callback executed when reCAPTCHA API is loaded
function onRecaptchaLoad() {
    console.log('reCAPTCHA API loaded');
    // Verify recaptcha container exists
    if (document.getElementById('recaptcha-container')) {
        try {
            // Render the reCAPTCHA widget using explicit rendering
            recaptchaWidgetId = grecaptcha.render('recaptcha-container', {
                'sitekey': '6LfF2RorAAAAAPKWpmQGwHdQpKiuwjFgxmZisXVh',
                'callback': function(response) {
                    // This function is called when the user successfully completes the reCAPTCHA
                    console.log('reCAPTCHA verified');
                    recaptchaVerified = true;
                    $('#submitBtn').prop('disabled', false);
                },
                'expired-callback': function() {
                    // This function is called when the reCAPTCHA expires
                    console.log('reCAPTCHA expired');
                    recaptchaVerified = false;
                    $('#submitBtn').prop('disabled', true);
                }
            });
            console.log('reCAPTCHA widget rendered with ID:', recaptchaWidgetId);
        } catch (e) {
            console.error('Error rendering reCAPTCHA:', e);
        }
    } else {
        console.error('recaptcha-container element not found');
    }
}

$(document).ready(function() {
    // Initially disable the submit button until reCAPTCHA is verified
    $('#submitBtn').prop('disabled', true);
    
    // Initialize Animsition only if the element exists
    if ($('.animsition').length > 0) {
        try {
            $('.animsition').animsition({
                inClass: 'fade-in',
                outClass: 'fade-out',
                inDuration: 1500,
                outDuration: 800,
                linkElement: '.animsition-link',
                loading: true,
                loadingParentElement: 'body',
                loadingClass: 'animsition-loading',
                loadingInner: '',
                timeout: false,
                timeoutCountdown: 5000,
                onLoadEvent: true,
                browser: ['animation-duration', '-webkit-animation-duration'],
                overlay: false,
                overlayClass: 'animsition-overlay-slide',
                overlayParentElement: 'body',
                transition: function(url) { window.location.href = url; }
            });
            console.log('Animsition initialized successfully');
        } catch(e) {
            console.error("Error initializing Animsition: ", e);
        }
    } else {
        console.warn("Animsition element not found on the page");
    }
    
    // Form submission handler
    $('#forgotPasswordForm').on('submit', function(e) {
        // Make sure the reCAPTCHA response is included in the form submission
        if (!grecaptcha.getResponse(recaptchaWidgetId)) {
            e.preventDefault();
            alert("Veuillez vérifier le reCAPTCHA avant de soumettre le formulaire.");
            return false;
        }
        
        // Enable normal form submission
        $('#submitBtn').prop('disabled', true);
        localStorage.setItem('passwordResetStarted', 'true');
    });
    
    // Handle back to login button securely
    $('#backToLogin').on('click', function(e) {
        e.preventDefault();
        localStorage.removeItem('passwordResetStarted');
        window.location.href = this.href;
    });
    
    // Clear any stored state on page load
    if (localStorage.getItem('passwordResetStarted')) {
        localStorage.removeItem('passwordResetStarted');
    }
    
    // Prevent back navigation with history API
    window.history.pushState(null, document.title, location.href);
    window.addEventListener('popstate', function(event) {
        window.history.pushState(null, document.title, location.href);
        alert('Pour des raisons de sécurité, veuillez utiliser les boutons de navigation fournis.');
    });
    
    // Force reload if page is accessed via back button
    window.addEventListener('pageshow', function(event) {
        if (event.persisted) {
            window.location.reload();
        }
    });
});
</script>
