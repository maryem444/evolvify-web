{% extends 'base.html.twig' %}
{% block title %}Dashboard - Evolvify{% endblock %}

{% block content %}
<div class="container">
  <div class="page-inner">
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
      <nav class="navbar navbar-header-left navbar-expand-lg navbar-form nav-search p-0 d-none d-lg-flex">
        <div class="input-group">
          <div class="input-group-prepend">
            <button type="submit" class="btn btn-search pe-1">
              <i class="fa fa-search search-icon"></i>
            </button>
          </div>
          <input
            type="text"
            id="searchInput"
            placeholder="Search ..."
            class="form-control"
          />
        </div>
      </nav>
    </div>

    <div class="col-md-20">
      <div class="card card-round">
        <div class="card-header">
          <div class="card-head-row card-tools-still-right">
            <div class="card-title">List Candidates</div>
            <div class="card-tools">
              <div class="dropdown">
                <!-- vide pour lâ€™instant -->
              </div>
            </div>
          </div>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <!-- Candidates table -->
            <table class="table align-items-center mb-0">
              <thead class="thead-light">
                <tr>
                  <th scope="col">Prenom</th>
                  <th scope="col" class="text-end">Nom</th>
                  <th scope="col" class="text-end" style="min-width: 120px;">E-mail</th>
                  <th scope="col" class="text-end" style="min-width: 250px;">Date de Naissance</th>
                  <th scope="col" class="text-end" style="min-width: 250px;">Date de Postulation</th>
                  <th scope="col" class="text-end" style="min-width: 250px;">Numero de Telephone</th>
                  <th scope="col" class="text-end">genre</th>
                  <th scope="col" class="text-end">CV</th>
                </tr>
              </thead>
              <tbody>
                {% for candidate in Candidates %}
                  <tr class="row-candidate">
                    <td>{{ candidate.firstname }}</td>
                    <td class="text-end">{{ candidate.lastname }}</td>
                    <td class="text-end" style="min-width: 120px;">{{ candidate.email }}</td>
                    <td class="text-end" style="min-width: 250px;">{{ candidate.birthdayDate|date('d/m/Y') }}</td>
                    <td class="text-end" style="min-width: 250px;">{{ candidate.joiningDate|date('d/m/Y') }}</td>
                    <td class="text-end" style="min-width: 250px;">{{ candidate.getNumTel() }}</td>
                    <td class="text-end">{{ candidate.gender }}</td>
                    <td class="text-end">
                      <a href="{{ candidate.getUploadedCv() }}" target="_blank">Voir le CV</a>
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="8" class="text-center">Aucune Candidate disponible</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Script de recherche -->
<script>
  document.getElementById('searchInput').addEventListener('input', function () {
    const keyword = this.value.toLowerCase();
    const rows = document.querySelectorAll('.row-candidate');

    rows.forEach(row => {
      const rowText = row.innerText.toLowerCase();
      row.style.display = rowText.includes(keyword) ? '' : 'none';
    });
  });
</script>

{% endblock %}
