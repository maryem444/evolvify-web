{% extends 'base.html.twig' %}

{% block title %}Users - Gestion RH{% endblock %}

{% block content %}
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Users</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="basic-datatables" class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Birthday Date</th>
                            <th>Joining Date</th>
                            <th>Role</th>
                            <th>Remaining Time Off</th>
                            <th>Remaining Leave</th>
                            <th>Phone Number</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Birthday Date</th>
                            <th>Joining Date</th>
                            <th>Role</th>
                            <th>Remaining Time Off</th>
                            <th>Remaining Leave</th>
                            <th>Phone Number</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.gender }}</td>
                            <td>{{ user.birthdayDate ? user.birthdayDate|date('Y/m/d') : 'N/A' }}</td>
                            <td>{{ user.joiningDate ? user.joiningDate|date('Y/m/d') : 'N/A' }}</td>
                            <td>{{ user.role }}</td>
                            <td>{{ user.ttRestants is not null ? user.ttRestants : 'N/A' }}</td>
                            <td>{{ user.congeRestant is not null ? user.congeRestant : 'N/A' }}</td>
                            <td>{{ user.numTel ? user.numTel : 'N/A' }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="10" class="text-center">No users found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
