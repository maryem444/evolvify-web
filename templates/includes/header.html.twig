<div class="main-header">
	<div
		class="main-header-logo">
		<!-- Logo Header -->
		<div class="logo-header" data-background-color="dark">
			<a href="index.html" class="logo">
				<img src="assets/img/kaiadmin/logo_light.svg" alt="navbar brand" class="navbar-brand" height="20"/>
			</a>
			<div class="nav-toggle">
				<button class="btn btn-toggle toggle-sidebar">
					<i class="gg-menu-right"></i>
				</button>
				<button class="btn btn-toggle sidenav-toggler">
					<i class="gg-menu-left"></i>
				</button>
			</div>
			<button class="topbar-toggler more">
				<i class="gg-more-vertical-alt"></i>
			</button>
		</div>
		<!-- End Logo Header -->
	</div>
	<!-- Navbar Header -->
	<nav class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom">
		<div class="container-fluid">


			<ul class="navbar-nav topbar-nav ms-md-auto align-items-center">
				<li class="nav-item topbar-icon dropdown hidden-caret d-flex d-lg-none">
					<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false" aria-haspopup="true" style="margin-left: 10px;">
						<i class="fa fa-search"></i>
					</a>
					<ul class="dropdown-menu dropdown-search animated fadeIn">
						<form class="navbar-left navbar-form nav-search">
							<div class="input-group">
								<input type="text" placeholder="Search ..." class="form-control"/>
							</div>
						</form>
					</ul>
				</li>


				<li class="nav-item topbar-user dropdown hidden-caret">
					<a class="dropdown-toggle profile-pic" data-bs-toggle="dropdown" href="#" aria-expanded="false" style="margin-right: 15px;">
						<div class="avatar-sm">
							{% if app.user is defined and app.user %}
								{% if app.user.profilePhoto %}
									<img src="{{ asset(app.user.profilePhoto) }}" alt="..." class="avatar-img rounded-circle"/>
								{% else %}
									<img src="{{ asset('assets/img/profile.png') }}" alt="..." class="avatar-img rounded-circle"/>
								{% endif %}
							{% else %}
								<img src="{{ asset('assets/img/profile.png') }}" alt="..." class="avatar-img rounded-circle"/>
							{% endif %}
						</div>

						<!-- Replace line 200 or surrounding area with this: -->
						<span class="profile-username">
							<span class="op-7">Hi,</span>
							<span class="fw-bold">
								{% if app.user %}
									{{ app.user.firstname }}
								{% else %}
									Guest
								{% endif %}
							</span>
						</span>
					</a>
					<ul class="dropdown-menu dropdown-user animated fadeIn">
						<div class="dropdown-user-scroll scrollbar-outer">
							<li>
								<div class="user-box">
									<div class="avatar-lg">
										{% if app.user is defined and app.user %}
											{% if app.user.profilePhoto %}
												<img src="{{ asset(app.user.profilePhoto) }}" alt="..." class="avatar-img rounded"/>
											{% else %}
												<img src="{{ asset('assets/img/profile.png') }}" alt="image profile" class="avatar-img rounded"/>
											{% endif %}
										{% else %}
											<img src="{{ asset('assets/img/profile.png') }}" alt="image profile" class="avatar-img rounded"/>
										{% endif %}
									</div>
									<div class="u-text">
										{% if app.user is defined and app.user %}
											<h4>{{ app.user.firstname }}</h4>
											<p class="text-muted">{{ app.user.email }}</p>
											<a href="{{ path('app_profile') }}" class="btn btn-xs btn-secondary btn-sm">View Profile</a>
										{% else %}
											<h4>Guest</h4>
											<a href="{{ path('app_login') }}" class="btn btn-xs btn-secondary btn-sm">Login</a>
										{% endif %}
									</div>
								</div>
							</li>
							<li>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="{{ path('app_profile') }}">My Profile</a>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
							</li>
						</div>
					</ul>
				</li>
			</ul>
		</div>
	</nav>
	<!-- End Navbar -->
</div>
