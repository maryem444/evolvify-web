                <div class="d-flex justify-content-center">
                    <div style="width: 200px; height: 200px;">
                        <canvas id="genderDistributionChart"></canvas>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="fas fa-circle text-primary"></i> Homme</span>
<span>{{ genderDistribution['HOMME'] ?? 0 }}</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span><i class="fas fa-circle text-danger"></i> Femme</span>
<span>{{ genderDistribution['FEMME'] ?? 0 }}</span>
                    </div>
                </div>
            </div>

            <div class="dashboard-card bg-white p-4 mb-4">
                <h5 class="card-title mb-3">Répartition par rôle</h5>
                <div class="d-flex justify-content-center">
                    <div style="width: 200px; height: 200px;">
                        <canvas id="roleDistributionChart"></canvas>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="fas fa-circle text-primary"></i> RH</span>
<span>{{ roleDistribution['RESPONSABLE_RH'] ?? 0 }}</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="fas fa-circle text-success"></i> Chef projet</span>
<span>{{ roleDistribution['CHEF_PROJET'] ?? 0 }}</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="fas fa-circle text-info"></i> Employé</span>
<span>{{ roleDistribution['EMPLOYEE'] ?? 0 }}</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span><i class="fas fa-circle text-warning"></i> Candidat</span>
<span>{{ roleDistribution['CONDIDAT'] ?? 0 }}</span>
                    </div>
                </div>
