            <div class="dashboard-card bg-white p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="card-title mb-0">Employés récents</h5>
                    <a href="#" class="btn btn-sm btn-outline-primary">Voir tous</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-borderless align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Employé</th>
                                <th>Email</th>
                                <th>Rôle</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
{% for employee in recentEmployees ?? [] %}

                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar me-2 bg-light rounded-circle">
                                            {% if employee.gender == 'HOMME' %}
                                                <span class="text-primary"><i class="fas fa-user"></i></span>
                                            {% else %}
                                                <span class="text-danger"><i class="fas fa-user"></i></span>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <h6 class="mb-0">{{ employee.firstname|capitalize }} {{ employee.lastname|upper }}</h6>
                                            <small class="text-muted">ID: {{ employee.id }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>{{ employee.email }}</td>
                                <td>
                                    {% if employee.role == 'RESPONSABLE_RH' %}
                                        <span class="badge bg-primary">RH</span>
                                    {% elseif employee.role == 'CHEF_PROJET' %}
                                        <span class="badge bg-success">Chef Projet</span>
                                    {% elseif employee.role == 'EMPLOYEE' %}
                                        <span class="badge bg-info">Employé</span>
                                    {% elseif employee.role == 'CONDIDAT' %}
                                        <span class="badge bg-warning">Candidat</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recent Projects -->
        <div class="col-xl-6 mb-4">
            <div class="dashboard-card bg-white p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="card-title mb-0">Projets récents</h5>
                    <a href="#" class="btn btn-sm btn-outline-primary">Voir tous</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-borderless align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Projet</th>
                                <th>Statut</th>
                                <th>Progrès</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for project in recentProjects ?? []%}
                            <tr>
                                <td>
                                    <div>
                                        <h6 class="mb-0">{{ project.title }}</h6>
                                        <small class="text-muted">ID: {{ project.id_projet }}</small>
                                    </div>
                                </td>
                                <td>
                                    {% if project.status == 'IN_PROGRESS' %}
                                        <span class="badge bg-primary">En cours</span>
                                    {% elseif project.status == 'COMPLETED' %}
                                        <span class="badge bg-success">Complété</span>
                                    {% endif %}
                                </td>
                                <td style="width: 30%;">
                                    {% set progress = project.status == 'COMPLETED' ? 100 : (project.status == 'IN_PROGRESS' ? 50 : 10) %}
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" style="width: {{ progress }}%" role="progressbar"></div>
                                    </div>
                                    <small class="text-muted">{{ progress }}%</small>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Upcoming Leaves -->
        <div class="col-xl-6 mb-4">
            <div class="dashboard-card bg-white p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="card-title mb-0">Congés à venir</h5>
                    <a href="#" class="btn btn-sm btn-outline-primary">Voir tous</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-borderless align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Employé</th>
                                <th>Type</th>
                                <th>Période</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for conge in upcomingConges ?? []%}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar me-2 bg-light rounded-circle">
                                            {% if conge.user.gender == 'HOMME' %}
                                                <span class="text-primary"><i class="fas fa-user"></i></span>
                                            {% else %}
                                                <span class="text-danger"><i class="fas fa-user"></i></span>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <h6 class="mb-0">{{ conge.user.firstname|capitalize }} {{ conge.user.lastname|upper }}</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>{{ conge.typeConge }}</td>
                                <td>
                                    {{ conge.leaveStart|date('d/m/Y') }} - {{ conge.leaveEnd|date('d/m/Y') }}
