            <div class="dashboard-card bg-white p-4 mb-4">
                <h5 class="card-title mb-3">Statut des congés</h5>
                <div class="d-flex justify-content-center">
                    <div style="width: 200px; height: 200px;">
                        <canvas id="congeStatusChart"></canvas>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="fas fa-circle text-success"></i> Approuvé</span>
<span>{{ congesByStatus['APPROUVE'] ?? 0 }}</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="fas fa-circle text-warning"></i> En attente</span>
<span>{{ congesByStatus['EN_ATTENTE'] ?? 0 }}</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span><i class="fas fa-circle text-danger"></i> Refusé</span>
<span>{{ congesByStatus['REFUSE'] ?? 0 }}</span>
