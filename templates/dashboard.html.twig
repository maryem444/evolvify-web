                                </td>
                                <td>
                                    {% if conge.statusString == 'ACCEPTE' %}
                                        <span class="badge bg-success">Approuvé</span>
                                    {% elseif conge.statusString == 'EN_ATTENTE' %}
                                        <span class="badge bg-warning">En attente</span>
                                    {% elseif conge.statusString == 'REFUSE' %}
                                        <span class="badge bg-danger">Refusé</span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recent Absences -->
        <div class="col-xl-6 mb-4">
            <div class="dashboard-card bg-white p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="card-title mb-0">Absences récentes</h5>
                    <a href="#" class="btn btn-sm btn-outline-primary">Voir toutes</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-borderless align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Employé</th>
                                <th>Type</th>
                                <th>Date</th>
                                <th>Durée</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for absence in recentAbsences ?? []%}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar me-2 bg-light rounded-circle">
                                            {% if absence.user.gender == 'HOMME' %}
                                                <span class="text-primary"><i class="fas fa-user"></i></span>
                                            {% else %}
                                                <span class="text-danger"><i class="fas fa-user"></i></span>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <h6 class="mb-0">{{ absence.user.firstname|capitalize }} {{ absence.user.lastname|upper }}</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">{{ absence.type }}</span>
                                </td>
                                <td>{{ absence.dateabsence|date('d/m/Y') }}</td>
                                <td>{{ absence.duree }} heures</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>
document.addEventListener('DOMContentLoaded', function() {
    // Get chart data from PHP
    const chartLabels = {{ chartLabels is defined ? chartLabels|json_encode|raw : '[]' }};
    const projectData = {{ projectData is defined ? projectData|json_encode|raw : '[]' }};
    const taskData = {{ taskData is defined ? taskData|json_encode|raw : '[]' }};
    const congeData = {{ congeData is defined ? congeData|json_encode|raw : '[]' }}; 
    const absenceData = {{ absenceData is defined ? absenceData|json_encode|raw : '[]' }};
    
    // Monthly Activity Chart
    const monthlyActivityCtx = document.getElementById('monthlyActivityChart').getContext('2d');
    const monthlyActivityChart = new Chart(monthlyActivityCtx, {
        type: 'line',
        data: {
            labels: chartLabels,
            datasets: [
                {
                    label: 'Projets',
                    data: projectData,
                    borderColor: '#4e73df',
                    backgroundColor: 'rgba(78, 115, 223, 0.1)',
                    tension: 0.4,
                    fill: true
                },
                {
                    label: 'Tâches',
                    data: taskData,
                    borderColor: '#1cc88a',
                    backgroundColor: 'rgba(28, 200, 138, 0.1)',
                    tension: 0.4,
                    fill: true
                },
                {
                    label: 'Congés',
                    data: congeData,
                    borderColor: '#f6c23e',
                    backgroundColor: 'rgba(246, 194, 62, 0.1)',
                    tension: 0.4,
                    fill: true
                },
                {
                    label: 'Absences',
                    data: absenceData,
                    borderColor: '#e74a3b',
                    backgroundColor: 'rgba(231, 74, 59, 0.1)',
                    tension: 0.4,
                    fill: true
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'top'
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
